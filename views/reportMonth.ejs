<%- include('partials/header') %>

<div class="main-container">
  <div class="dashboard-content">
    <div class="dashboard-header">
      <h1 class="page-title">Monthly Sales Report</h1>
    </div>

    <% if (sales && sales.length > 0) { %>
      <div class="card">
        <div class="card-header">Sales by Month</div>
        <div class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th>Month</th>
                <th>Total Sales</th>
                <th>Transactions</th>
              </tr>
            </thead>
            <tbody>
              <% sales.forEach(s => { %>
                <tr>
                  <td>Month <%= s._id %></td>
                  <td><%= s.totalSales %></td>
                  <td><%= s.count %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    <% } else { %>
      <p>No monthly sales data available.</p>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
