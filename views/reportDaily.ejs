<%- include('partials/header') %>

<div class="main-container">
  <div class="dashboard-content">
    <div class="dashboard-header">
      <h1 class="page-title">Daily Sales Report</h1>
    </div>

    <% if (sales && sales.length > 0) { %>
      <div class="card">
        <div class="card-header">Sales for Today (<%= new Date().toDateString() %>)</div>
        <div class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% sales.forEach(sale => { %>
                <tr>
                  <td><%= sale.product ? sale.product.name : '' %></td>
                  <td><%= sale.quantity %></td>
                  <td><%= sale.total %></td>
                  <td><%= sale.status %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    <% } else { %>
      <p>No sales found for today.</p>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
