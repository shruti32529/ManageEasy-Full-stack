<%- include('partials/header') %>

<div class="container">
  <h2>Edit Group</h2>
  <form action="/users/groups/edit/<%= group._id %>" method="POST">
    <div class="mb-3">
      <label>Group Name</label>
      <input type="text" name="groupName" class="form-control" value="<%= group.groupName %>" required>
    </div>
    <div class="mb-3">
      <label>Group Level</label>
      <input type="number" name="groupLevel" class="form-control" value="<%= group.groupLevel %>" required>
    </div>
    <div class="mb-3">
      <label>Status</label>
      <select name="status" class="form-control">
        <option value="Active" <%= group.status === 'Active' ? 'selected' : '' %>>Active</option>
        <option value="Inactive" <%= group.status === 'Inactive' ? 'selected' : '' %>>Inactive</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/users/groups" class="btn btn-secondary">Back</a>
  </form>
</div>

<%- include('partials/footer') %>
