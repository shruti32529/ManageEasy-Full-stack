<%- include('partials/header') %>

<div class="main-container">
  <div class="dashboard-content">
    <div class="dashboard-header">
      <h1 class="page-title">Sales Report by Date</h1>
    </div>

    <!-- Date Range Form -->
    <div class="card">
      <div class="card-header">Select Date Range</div>
      <div class="card-body">
        <form action="/sales/report/date" method="POST" class="form-inline">
          <label for="startDate">Start Date:</label>
          <input type="date" name="startDate" required>

          <label for="endDate">End Date:</label>
          <input type="date" name="endDate" required>

          <button type="submit" class="btn primary">Generate Report</button>
        </form>
      </div>
    </div>

    <!-- Results Table -->
    <% if (sales && sales.length > 0) { %>
      <div class="card">
        <div class="card-header">
          Report Results
          <a href="/sales/report/date/pdf?startDate=<%= startDate %>&endDate=<%= endDate %>" 
             class="btn secondary" style="float:right;">Download PDF</a>
        </div>
        <div class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th>Date</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% sales.forEach(sale => { %>
                <tr>
                  <td><%= sale.sale_date ? sale.sale_date.toDateString() : '' %></td>
                  <td><%= sale.product ? sale.product.name : '' %></td>
                  <td><%= sale.quantity %></td>
                  <td><%= sale.total %></td>
                  <td><%= sale.status %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    <% } else if (sales) { %>
      <p>No sales found for this date range.</p>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
