<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Groups</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
    .table-responsive {
      overflow-x: auto;
    }
    .btn-group {
      gap: 5px; /* Add some space between buttons */
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4">Manage Groups</h2>

    <% if (messages.success && messages.success.length > 0) { %>
      <div class="alert alert-success"><%= messages.success[0] %></div>
    <% } %>
    <% if (messages.error && messages.error.length > 0) { %>
      <div class="alert alert-danger"><%= messages.error[0] %></div>
    <% } %>

    <a href="/groups/add" class="btn btn-primary mb-3">Add New Group</a>

    <% if (groups.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Group Name</th>
              <th>Description</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% groups.forEach((group, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= group.name %></td>
                <td><%= group.description || '-' %></td>
                <td><%= new Date(group.createdAt).toLocaleDateString() %></td>
                <td>
                  <div class="btn-group" role="group">
                    <a href="/groups/edit/<%= group._id %>" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Edit</a>
                    <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete('<%= group._id %>')"><i class="fas fa-trash-alt"></i> Delete</button>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-muted">No groups found. Add one to get started.</p>
    <% } %>
  </div>

  <script>
    function confirmDelete(groupId) {
      if (confirm('Are you sure you want to delete this group?')) {
        window.location.href = '/groups/delete/' + groupId;
      }
    }
  </script>
</body>
</html>


